<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical" >

        <TextView
            style="@style/title"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title" />

        <TextView
            style="@style/information_big"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/result_get_title" />

        <TextView
            android:id="@+id/text_view_result_get"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/information_big"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/result_should_title" />

        <TextView
            android:id="@+id/text_view_result_should"
            style="@style/data_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="7dp"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/button_question_mark"
            style="@style/button_question_mark"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center_horizontal" 
            android:text="@string/question_mark" />

        <Button
            android:id="@+id/button_view_progress"
            style="@style/button_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/review_progress" />
    </LinearLayout>

</LinearLayout>